public class Missçao2_Principal {

	public static void main(String[] args) {
		
		//INICIO DO DO BLOCO 1
		  //APRESENTA P TÍTULO DA MISSÃO
		System.out.println("Inicio da Missão 2");
		//DECLARA E ATRIBUI VALOR VARIÁVEL IDADE
		int IDADE = 15;
		System.out.println("Pograma para testar a idade do aluno. ");
		//FIM DO BLOCO 1
		  //REALIZA O TESTE DE CONDIÇÃO 
		if (IDADE==40);  
		{
			//BLOCO 2
			System.out.println("O aluno aparentemente tem exatamente 40 anos.");
		}
		//BLOCO 3 
		System.out.println("Fim do teste de idade.");
	}

}

